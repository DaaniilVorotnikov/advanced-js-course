{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": false,
      "module": "esnext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    },
    "include": [
      "./config/jest/setup-tests.ts",
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "**/**/*.ts",
      "**/**/*.tsx",
      "<path-to-your-source>.ts",
      "<path-to-your-source>.tsx",
    ]
}